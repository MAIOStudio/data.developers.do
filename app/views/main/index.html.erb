    <h3 class="panel-title">Servicios (beta)</h3>
  </div>
  <table class="table table-striped">
  <tbody>
    <%@servicios.each do |servicio| %>
    <tr>
      <td><span class="service"><%=servicio.nombre%></span><br/>
        <%=servicio.descripcion%><br>
        <span class="text-muted"><small>Ultima actualización: <%=servicio.updated_at.strftime("%d-%b-%Y")%></small></span>
      </td>
      <td class="center_btn">
        <a href="<%=servicio_path(servicio)%>" <%=servicio.btn_disabled%> class="btn btn-primary btn-block">Detalle</a>
      </td>
      
    </tr>
    <%end%>
  </tbody>
